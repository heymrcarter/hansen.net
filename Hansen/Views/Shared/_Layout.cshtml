<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>A.L. Hansen Paint and Metal</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="header">
        <div class="row">
            <a href="/" class="left"><img src="@Url.Content("~/Content/images/hansen-logo.png")" /></a>
            
            <div class="magellan-container right" data-magellan-expedition="fixed">
                <div class="row">
                    <dl class="sub-nav">
                        <dd data-magellan-arrival="about"><a href="#about">About</a></dd>
                        <dd data-magellan-arrival="services"><a href="#services">Services</a></dd>
                        <dd data-magellan-arrival="contact"><a href="#contact">Contact</a></dd>
                        <dd data-magellan-arrival="gallery"><a href="#gallery">Gallery</a></dd>
                    </dl>
                </div>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
        
        <footer class="footer">
            <div class="row">
                <p class="legal">&copy; @DateTime.Now.Year A.L. Hansen Paint and Metal, Inc. All Rights Reserved</p>
            </div>
        </footer>
    </main>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAIWzg1-zeZbVg65VaFDZa2AV0mqz_MkZs"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/foundation")
    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/hansen")

    <script>
        $(function () {
            $(document).foundation();
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
